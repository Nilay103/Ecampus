<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>	
	<package name="controller" namespace="/*" extends="struts-default">
		<action name="login" class="controller.ActionLogin" method="execute">
			<result name="success">/addCourseForm.jsp</result>
			<result name="input">/login.jsp</result>
		</action>
		<action name="addCourse" class="controller.ActionCourse" method="execute">
			<result name="success">/index.jsp</result>
		</action>
	</package>
</struts>    
